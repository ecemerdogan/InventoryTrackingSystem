<Window x:Class="BookstoreInventoryTracking.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="600" Width="800">
    
    <!-- Window Background -->
    <Window.Background>
        <ImageBrush ImageSource="/Images/bookstore.jpg" />
    </Window.Background>

    <!-- Root Grid -->
    <Grid>
        <!-- Main Content Grid -->
        <Grid Background="White" Margin="160,110,160,40">
            <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Title for Page -->
                <TextBlock Foreground="Black"
                           FontWeight="Bold"
                           FontSize="24"
                           Margin="0,20,0,20"
                           TextAlignment="Center"
                           HorizontalAlignment="Center">
                    Bookstore Inventory Tracking System
                    <LineBreak />
                    Login Page
                </TextBlock>

                <!-- User Profile Image -->
                <Image Source="/Images/bookstore.jpg"
                       Width="150" Height="150" HorizontalAlignment="Center" Margin="0,10,0,10" />

                <!-- User ID Section -->
                <Border Background="LightGray" CornerRadius="1" Padding="2" Height="20" Width="200">
                    <TextBlock Text="User ID"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,0,0" />
                </Border>
                <TextBox Name="txtUserId" Height="20" Width="200" VerticalContentAlignment="Center" />

                <!-- Password Section -->
                <Border Background="LightGray" CornerRadius="1" Padding="2" Height="20" Width="200">
                    <TextBlock Text="Password"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,0,0" />
                </Border>
                <PasswordBox Name="txtPassword"
                     Width="200"
                     Height="20"
                     VerticalContentAlignment="Center"
                     KeyDown="TxtPassword_KeyDown" />
                <!-- Login Button -->
                <Button Name="btnLogin"
                    Content="Login"
                    Height="20"
                    Width="100"
                    Margin="10"
                    Click="BtnLogin_Click" />

                
            </StackPanel>
        </Grid>

        <!-- Footer Text -->
        <TextBlock Text="designed by trackForce"
                   Foreground="White"
                   FontWeight="DemiBold"
                   FontSize="12"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Margin="10" />
    </Grid>
</Window>
